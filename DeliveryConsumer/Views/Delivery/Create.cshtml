@model DeliveryConsumer.Models.Delivery

@{
    ViewData["Title"] = "CreateDelivery";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Create Delivery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label>Customer</label>
                <br />
                <select asp-for="CustomerId" class="custom-select">
                    @foreach (var item in ViewBag.customers)
                    {

                      <option value="@item.CustomerId">@item.FirstName @item.LastName</option>
                        
                    }
                </select>
            </div>
            
            <div class="form-group">
                <label>Shop</label>
                <br />
                <select asp-for="ShopId" class="custom-select">
                    @foreach (var item in ViewBag.shops)
                    { 

                      <option value="@item.ShopId">@item.Name</option>

                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ArriveDate" class="control-label"></label>
                <input asp-for="ArriveDate" class="form-control" required />
                <span asp-validation-for="ArriveDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" required />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Delivery" class="btn btn-primary">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
